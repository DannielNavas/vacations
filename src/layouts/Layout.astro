---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
</head>
<body>
    <slot />
</body>
</html>

<style is:global>
	html {
		background-color: #232323;
	}
	body {
		margin: 0;
		padding: 0;
		height: 100vh;
	}
</style>
